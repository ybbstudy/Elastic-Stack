{
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "analysis": {
        "analyzer": {
          "my_ngrams": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": ["my_ngrams"]
          }
        },
        "filter": {
          "my_ngrams": {
            "type": "ngram",
            "min_gram": 2,
            "max_gram": 2
          }
        }
      }
    }
  },
  "mappings": {
    "doc": {
      "properties": {
        "f1": {"type": "text"},
        "f2": {"type": "keyword"},
        "f3": {"type": "text", "analyzer": "my_ngrams"},
        "f4": {
          "type": "text",
          "index_options": "docs"
        },
        "f_multi": {
          "type": "text",
          "fields": {
            "raw": {"type": "keyword"},
            "f_token_count": {"type": "token_count", "analyzer": "standard"}
          }
        },
        "f_object": {
          "type": "object",
          "properties": {
            "sub1": {"type": "text"},
            "sub2": {"type": "keyword"},
            "sub3": {"type": "integer"}
          }
        },
        "f_nested": {
          "type": "nested",
          "properties": {
            "nest1": {"type": "text"},
            "nest2": {"type": "keyword"},
            "nest3": {"type": "integer"}
          }
        },
        "f_date": {
          "type": "date",
          "format": "yyyy/MM/dd||epoch_millis"
        },
        "f_bool": {"type": "boolean"},
        "f_byte": {"type": "byte"},
        "f_short": {"type": "short"},
        "f_int": {"type": "integer"},
        "f_long": {"type": "long"},
        "f_float": {"type": "float"},
        "f_hfloat": {"type": "half_float"},
        "f_sfloat": {"type": "scaled_float", "scaling_factor": 100},
        "f_ip": {"type": "ip"},
        "f_binary": {"type": "binary"},
        "f_suggest": {"type": "completion"},
        "f_geop": {"type": "geo_point"},
        "f_geos": {"type": "geo_shape"}
      }
    }
  }
}
